root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
# Allow trailing spaces in Markdown for hard line breaks.
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[*.ini]
indent_size = 4

[*.cfg]
indent_size = 4

[Makefile]
indent_style = tab
